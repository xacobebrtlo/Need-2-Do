<ContentPage
    x:Class="Need_2_Do.Views.AÃ±adirNotaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Nueva Nota"
    BackgroundColor="#F0F0F0">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label
                FontSize="16"
                Text="TÃ­tulo"
                TextColor="#333" />
            <Entry
                x:Name="tituloEntry"
                Margin="0,0,0,10"
                BackgroundColor="White"
                FontSize="18"
                HeightRequest="40"
                Placeholder="TÃ­tulo de la nota"
                TextColor="Black" />
            <Button
                Margin="0,20,0,0"
                Clicked="OnAsignarFechaClicked"
                FontSize="16"
                HorizontalOptions="Center"
                Text="{Binding TextoBotonFecha}" />

            <DatePicker
                Margin="0,10"
                Date="{Binding FechaTarea}"
                Format="D"
                HorizontalOptions="Center"
                IsVisible="{Binding MostrarCalendario}" />

            <!--  Mostrar fecha seleccionada  -->
            <Label
                Margin="0,5,0,0"
                FontSize="14"
                HorizontalOptions="Center"
                IsVisible="{Binding FechaTarea.HasValue}"
                Text="{Binding FechaTarea, StringFormat='ðŸ“ŒFecha asignada: {0:dddd, dd MMMM yyyy}'}"
                TextColor="Gray" />



            <Label
                FontSize="16"
                Text="Contenido"
                TextColor="#333" />
            <Editor
                x:Name="contenidoEditor"
                AutoSize="TextChanges"
                BackgroundColor="White"
                FontSize="16"
                HeightRequest="200"
                Placeholder="Escribe tu nota aquÃ­..."
                TextColor="Black" />

            <Button
                BackgroundColor="#3B82F6"
                Clicked="OnGuardarClicked"
                CornerRadius="10"
                FontSize="18"
                HeightRequest="50"
                Text="Guardar"
                TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotasApp.Views.MainPage"
             Title="Tus Notas"
             BackgroundColor="#F4F4F4">

    <Grid Padding="10">
        <!-- Lista de notas -->
        <CollectionView x:Name="NotasCollection"
                        SelectionChanged="OnNotaSeleccionada"
                        Margin="0,0,0,70">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,10"
                           Padding="12"
                           CornerRadius="16"
                           BackgroundColor="White"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Titulo}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333" />
                            <Label Text="{Binding Contenido}"
                                   FontSize="14"
                                   TextColor="#666"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="3" />
                            <Label 
                                Text="{Binding FechaTarea, StringFormat='Fecha asignada: {0:dd MMM yyyy}'}" 
                                IsVisible="{Binding FechaTarea.HasValue}" />

                            <HorizontalStackLayout Spacing="15" Margin="0,10,0,0">
                                <Button Text="Editar"
                                        FontSize="12"
                                        BackgroundColor="#007AFF"
                                        TextColor="White"
                                        Padding="5"
                                        Clicked="OnEditarNotaDesdeLista"
                                        CommandParameter="{Binding .}" />
                                <Button Text="Borrar"
                                        FontSize="12"
                                        BackgroundColor="#FF3B30"
                                        TextColor="White"
                                        Padding="5"
                                        Clicked="OnBorrarNotadeLista"
                                        CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botón flotante -->
        <Grid VerticalOptions="End" HorizontalOptions="End" Padding="15">
            <Frame BackgroundColor="#007AFF"
                   CornerRadius="100"
                   HeightRequest="60"
                   WidthRequest="60"
                   HasShadow="True"
                   Padding="0">
                <ImageButton Source="plus.png"
                             Clicked="OnNuevaNotaClicked"
                             BackgroundColor="Transparent"
                             WidthRequest="60"
                             HeightRequest="60"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>

<ContentPage
    x:Class="NotasApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Need_2_Do.Models"
    Title="Tus Notas"
    BackgroundColor="#F4F4F4">

    <Grid Padding="10" RowDefinitions="Auto, *">

        <!--  Botón de filtro  -->
        <Border
            Margin="0,0,0,10"
            BackgroundColor="Transparent"
            HorizontalOptions="Start"
            StrokeThickness="0"
            VerticalOptions="Center">

            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnFiltroButtonClicked" />
            </Border.GestureRecognizers>

            <Grid
                ColumnDefinitions="Auto, Auto"
                ColumnSpacing="5"
                VerticalOptions="Center">
                <!--  Texto + flecha juntos  -->
                <Label
                    x:Name="FiltroLabel"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Todas ▶"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Grid>

        </Border>


        <!--  Imagen de estado vacío  -->
        <Image
            x:Name="EmptyImage"
            Grid.Row="1"
            HeightRequest="250"
            HorizontalOptions="Center"
            IsVisible="False"
            Source="empty_state.png"
            VerticalOptions="Center"
            WidthRequest="250" />

        <!--  Lista de notas  -->
        <CollectionView
            x:Name="NotasCollection"
            Grid.Row="1"
            ItemsSource="{Binding Notas}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem
                                    AutomationId="Editar"
                                    BackgroundColor="#4DA6FF"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IrAEditarNotaCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Editar" />

                                <SwipeItem
                                    AutomationId="Eliminar"
                                    BackgroundColor="#FF3B30"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.BorrarNotaCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Eliminar" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame
                            Margin="0,4"
                            Padding="16"
                            BackgroundColor="{DynamicResource CardBackgroundColor}"
                            CornerRadius="20"
                            HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnCardTapped" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="6">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Titulo}"
                                    TextColor="{DynamicResource TextPrimary}" />
                                <Label
                                    FontSize="14"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="3"
                                    Text="{Binding Contenido}"
                                    TextColor="{DynamicResource TextSecondary}" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="End"
                                    Text="{Binding FechaTarea, StringFormat='📅 {0:dd MMM yyyy}'}"
                                    TextColor="{DynamicResource DateText}" />
                            </VerticalStackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  Botón flotante  -->
        <Grid
            Grid.Row="1"
            Padding="15"
            HorizontalOptions="End"
            VerticalOptions="End">
            <Frame
                Padding="0"
                BackgroundColor="#007AFF"
                CornerRadius="100"
                HasShadow="True"
                HeightRequest="60"
                WidthRequest="60">
                <ImageButton
                    BackgroundColor="Transparent"
                    Clicked="OnNuevaNotaClicked"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    Source="plus.png"
                    VerticalOptions="Center"
                    WidthRequest="60" />
            </Frame>
        </Grid>

    </Grid>
</ContentPage>

<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="Need_2_Do.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Need_2_Do">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#000000</Color>
            <Color x:Key="TextSecondary">#444444</Color>
            <Color x:Key="DateText">#888888</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>

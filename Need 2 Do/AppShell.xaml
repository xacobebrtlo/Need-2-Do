<Shell 
    x:Class="Need_2_Do.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Need_2_Do.Views">

    <!-- Página principal -->
    <ShellContent
        Title="Notas"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <!-- Rutas definidas -->
    <ShellContent ContentTemplate="{DataTemplate views:AñadirNotaPage}" Route="AñadirNotaPage" />
    <ShellContent ContentTemplate="{DataTemplate views:EditarNotaPage}" Route="EditarNotaPage" />

</Shell>
